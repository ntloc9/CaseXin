<%= stylesheet_link_tag 'single_responsive' %>
<%= stylesheet_link_tag 'mainsingle' %>

<!-- Breadcrumbs -->
<div class="container single_product_container">
  <div class="row">
    <div class="col">
      <div class="breadcrumbs d-flex flex-row align-items-center">
        <ul>
          <li><a href="index.html">Home</a></li>
          <li><a href="categories.html"><i class="fa fa-angle-right" aria-hidden="true"></i>Men's</a></li>
          <li class="active"><a href="#"><i class="fa fa-angle-right" aria-hidden="true"></i>Single Product</a></li>
        </ul>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-7">
      <div class="single_product_pics">
        <div class="row">
          <div class="col-lg-3 thumbnails_col order-lg-1 order-2">
            <div class="single_product_thumbnails">
              <ul>
                <% @oplung.image_attachments.first(3).each do |d| %>
                <li><%= image_tag(d.image_url(:thumb), data: {image:"#{d.image_url(:default)}"}) %></li>
                <!-- <li class="active"><%#= image_tag(@oplung.image_attachments[2].image_url(:thumb), data: {image:"#{@oplung.image_attachments[2].image_url(:default)}"}) %></li>
                <li><img src="assets/images/single/single_3_thumb.jpg" alt="" data-image="assets/images/single/single_3.jpg"></li> -->
                <% end %>
              </ul>
            </div>
          </div>
          <div class="col-lg-9 image_col order-lg-2 order-1">
            <div class="single_product_image">
              <div class="single_product_image_background" style="background-image:url(<%= @oplung.image_attachments[1].image_url(:default)%>)"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-5">
      <div class="product_details">
        <div class="product_details_title">
          <h2><%= @oplung.title %></h2>
          <p><%= @oplung.description %></p>
        </div>
        <div class="free_delivery d-flex flex-row align-items-center justify-content-center">
          <span class="ti-truck"></span><span>free delivery</span>
        </div>
        <!-- <div class="original_price">$629.99</div> -->
        <div class="product_price"><%= number_to_currency(@oplung.price, precision: 0, unit: "₫", format: "%n %u", delimiter: ".") %></div>
        <ul class="star_rating">
          <li><i class="fa fa-star" aria-hidden="true"></i></li>
          <li><i class="fa fa-star" aria-hidden="true"></i></li>
          <li><i class="fa fa-star" aria-hidden="true"></i></li>
          <li><i class="fa fa-star" aria-hidden="true"></i></li>
          <li><i class="fa fa-star-o" aria-hidden="true"></i></li>
        </ul>
        <div class="product_color">
          <span>Có sẵn cho:  </span>
        </div>
        <%= form_tag order_items_path do %>
          <div class="quantity d-flex flex-column flex-sm-row align-items-sm-center">
            <!-- <span>Số lượng:</span> -->
            <%= hidden_field_tag :oplung_id, @oplung.id %>
            <%= hidden_field_tag :quantity, 1 %>
              <!-- <div class="red_button add_to_cart_button"><a href="#">add to cart</a></div> -->
            <div><%= submit_tag 'add to cart', class:"red_button add_to_cart_button" %></div>
            <div class="product_favorite d-flex flex-column align-items-center justify-content-center"></div>
          </div>
        <% end %>
        <span class="tag">Tag </span><span class = "badge" ><%= @oplung.phonemodel.title%> </span>
      </div>
    </div>
  </div>

</div>
