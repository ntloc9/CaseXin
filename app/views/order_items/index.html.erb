
<h2>Current Cart</h2>
  <%= link_to pluralize(current_cart.items_count, 'item'), cart_path %>
<table>
  <thead>
    <tr>
      <td>Product</td>
      <td>Price</td>
      <td>Quantity</td>
      <td></td>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.oplung.title %></td>
        <td><%= number_to_currency(item.price, precision: 0, unit: "₫", format: "%n %u", delimiter: ".") %></td>
        <td><%= item.quantity %></td>
        <td>
          <%= form_for item, method: :delete do |f| %>
            <%= f.submit "Remove" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>

  <tfoot>
    <td colspan="4" align = "right" ><%=number_to_currency(current_cart.sub_total, precision: 0, unit: "₫", format: "%n %u", delimiter: ".") %></td>
  </tfoot>
</table>

<%= link_to "Checkout" ,checkout_path %>
