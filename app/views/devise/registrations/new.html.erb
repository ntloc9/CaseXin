<div class="dangki" align = "center">
  <h2>Register</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <div class="col-md-4 col-md-offset-4 khongpadding">
        <%= f.text_field :name, required: true, id: "register_email", autofocus: true, placeholder: "Enter your name" %>
      </div>
      <div class="col-md-4 col-md-offset-4 khongpadding">
        <%= f.email_field :email, required: true, id: "register_email", autofocus: true, placeholder: "Enter your email" %>
      </div>
      <div class="col-md-4 col-md-offset-4 khongpadding">
        <%= f.password_field :password, required: true,id: "register_email", hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), placeholder: "Enter your password" %>
      </div>
      <div class="col-md-4 col-md-offset-4 khongpadding">
        <%= f.password_field :password_confirmation, required: true, id: "register_email", placeholder: "Confirm password" %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Continue", id: "register_btn" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
