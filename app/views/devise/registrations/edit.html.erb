<div class="dangnhap" align = "center">
  <h2>Edit <%= resource_name.to_s.humanize %></h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <div class="col-md-5 col-md-offset-4 khongpadding">
        <div class="row">
          <div class="col-md-4 lablefixright" align = "center"><%= f.label :email, "Email: ", class: "labelfix"%></div>
          <div class="col-md-8"><%= f.email_field :email, required: true, autofocus: true, id: "signin_email", type: "email" %></div>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>
          <div class="col-md-4 lablefixright" align = "center">
            <%= f.label :password, "New password: ", class: "labelfix"%>
          </div>
          <div class="col-md-8">
            <%= f.password_field :password, required: false, autofocus: true, id: "signin_password", type: "password", placeholder: "Leave it blank if you don't wanna change" %>
          </div>
          <div class="col-md-4 lablefixrightcf" align = "center">
            <%= f.label :password_confirmation, "Confirm new password: ", class: "labelfixcf"%>
          </div>
          <div class="col-md-8">
            <%= f.password_field :password_confirmation, required: false, autofocus: true, id: "signin_password", type: "password" %>
          </div>
          <div class="col-md-4 lablefixright" align = "center">
            <%= f.label :current_password, "Current password: ", class: "labelfix"%>
          </div>
          <div class="col-md-8">
            <%= f.password_field :current_password, required: false, autofocus: true, id: "signin_password", type: "password", placeholder: "Enter current password to confirm" %>
          </div>
        </div>
      </div>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Update", id: "register_btn" %>
    </div>
  <% end %>

  <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

</div>
