<div class="dangnhap" align = "center">
  <h2>Sign in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <div class="col-md-4 col-md-offset-4 khongpadding">
        <%= f.email_field :email, required: false, autofocus: true, id: "signin_email", type: "email", placeholder: "Enter your email" %>
      </div>
      <div class="col-md-4 col-md-offset-4 khongpadding">
        <%= f.password_field :password, required: false, id: "signin_password", type: "password", placeholder: "Enter your password" %>
      </div>
      <div class="col-md-4 col-md-offset-4">
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Go!", id: "login_btn" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
